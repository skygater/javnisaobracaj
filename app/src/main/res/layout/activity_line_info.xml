<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_line_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"

    tools:context="com.skygatestudios.javniprevoz.LineInfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorMainForeground"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_weight="10">

            <com.desnyki.library.infinitymenu.RootScrollView
                android:id="@+id/menu_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:fadingEdgeLength="0dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/bar1"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/radius"
                        android:orientation="horizontal">




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"

                                    android:background="@color/colorAccent"
                                    />


                                <!--ZaSatnicu-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center_horizontal">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Prvi Polazak"
                                            android:textAllCaps="true"
                                            android:textStyle="bold"
                                            android:textColor="@color/famousRed"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="10dp"
                                            android:textAlignment="center"
                                            android:textSize="15sp"
                                            />
                                        <TextView
                                            android:id="@+id/firststart"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text = "00:00"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:textStyle="bold"
                                            android:textSize="14sp"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center_horizontal">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Zadnji Polazak"
                                            android:textAllCaps="true"
                                            android:textStyle="bold"
                                            android:textColor="@color/famousRed"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="10dp"
                                            android:textAlignment="center"
                                            android:textSize="15sp"
                                            />
                                        <TextView
                                            android:id="@+id/firstend"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text = "00:00"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:textStyle="bold"
                                            android:textSize="14sp"
                                            />
                                    </LinearLayout>


                                </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/starts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:gravity="center_horizontal"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Zeljeznicka Stanica"
                            android:textAllCaps="true"
                            android:textColor="#ffff"
                            android:textSize="22sp"
                            />
                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                       >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            >

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/radius"
                                android:src="@drawable/iconica4"
                                android:gravity="center_horizontal"

                                />



                        </LinearLayout>


                        </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/bar2"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"

                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/radius"
                        android:orientation="horizontal">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="50dp"

                                android:background="@color/famousRed"
                                />

                            <!--ZaSatnicu-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center_horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Prvi Polazak"
                                        android:textAllCaps="true"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorAccent"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:textAlignment="center"
                                        android:textSize="15sp"
                                        />
                                    <TextView
                                        android:id="@+id/secondstart"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text = "00:00"

                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center_horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Zadnji Polazak"
                                        android:textAllCaps="true"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorAccent"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:textAlignment="center"
                                        android:textSize="15sp"
                                        />
                                    <TextView
                                        android:id="@+id/secondend"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text = "00:00"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/ends"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:gravity="center_horizontal"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Donja Gorica"
                            android:textAllCaps="true"
                            android:textColor="#ffff"
                            android:textSize="22sp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bar3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/radius"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/arr1"
                            android:layout_width="25dp"
                            android:layout_marginRight= "25dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="match_parent"
                            android:src="@drawable/arrow_right2"
                            android:tag="arrow"
                            />
                        <TextView
                            android:id="@+id/stanicaLinija"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:gravity="center_horizontal"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:textColor="@color/famousRed"
                            android:text="Stanice linije 10A"

                            />
                        </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/bar4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/radius"
                                android:layout_marginRight="5dp"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/radius"
                                android:layout_marginLeft="5dp"
                                />




                        </LinearLayout>
                        </RelativeLayout>
                </LinearLayout>


            </com.desnyki.library.infinitymenu.RootScrollView>

            <com.desnyki.library.infinitymenu.ChildScrollView
                android:id="@+id/child_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:animateLayoutChanges="true"
                >
            </com.desnyki.library.infinitymenu.ChildScrollView>
        </FrameLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"

        android:src="@drawable/arrico3" />

    <TextView
        android:id="@+id/brojlinije"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:onClick="backClick"
        android:text="Linija - 10A"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"

        />


</RelativeLayout>

