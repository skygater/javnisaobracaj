<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_station_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    tools:context="com.skygatestudios.javniprevoz.StationPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
    <View
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_weight="0.03"
        android:background="@color/colorMainForeground"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="22"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radius"
                android:layout_margin="10dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:text="Trasa:"
                        android:paddingLeft="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/famousRed"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="15dp"
                        android:text="Bulevar Sv. Petra Cetinjskog"
                        android:textAlignment="center"

                        />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"

                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radius3"
                    android:text="Linije stanice"
                    android:textColor="#FFF"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:textSize="15dp"
                    />
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:id="@+id/list_lines"
                    android:divider="#e8e8e8"
                    android:dividerHeight="8dp"

                    ></ListView>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/back3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"

        android:src="@drawable/arrico3" />

    <TextView
        android:id="@+id/stanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:onClick="backClick"
        android:text="Stanice linije 1"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>
